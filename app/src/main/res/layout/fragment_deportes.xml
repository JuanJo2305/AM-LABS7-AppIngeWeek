<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_deportes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.DeportesFragment"
    tools:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_deportes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_encuentro"
        tools:itemCount="1"
        android:contentDescription="Lista de encuentros deportivos" />

</FrameLayout>
