<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_ubicaciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.UbicacionesFragment"
    tools:theme="@style/Theme.MaterialComponents.Light.NoActionBar">

    <ListView
        android:id="@+id/list_ubicaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/md_theme_inverseSurface_highContrast"
        android:dividerHeight="1dp"
        android:clipToPadding="false"
        android:contentDescription="Lista de ubicaciones del evento"
        tools:listitem="@layout/item_ubicacion"
        android:padding="8dp" />
</FrameLayout>
