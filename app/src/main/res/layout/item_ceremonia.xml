<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/md_theme_onPrimaryContainer"
    app:strokeWidth="1dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/md_theme_primaryFixed_highContrast">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHoraCeremonia"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes, 09:00"
            android:textColor="@color/md_theme_onPrimary" />

        <TextView
            android:id="@+id/tvLugarCeremonia"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auditorio Principal"
            android:textColor="@color/md_theme_onPrimary"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvInvitados"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invitados: Autoridades"
            android:textColor="@color/md_theme_onPrimary"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvPrograma"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programa: Himno Nacional, Bienvenida"
            android:textColor="@color/md_theme_onPrimary"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
