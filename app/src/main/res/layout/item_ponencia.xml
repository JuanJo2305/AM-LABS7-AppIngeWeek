<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/md_theme_inversePrimary_mediumContrast">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Escuela -->
        <TextView
            android:id="@+id/tvEscuela"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ing. Sistemas"
            android:textColor="@color/black" />

        <!-- Tema -->
        <TextView
            android:id="@+id/tvTema"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarrollo de App con Kotlin"
            android:textColor="@color/md_theme_onSecondaryContainer" />

        <!-- Ponente, hora, lugar -->
        <TextView
            android:id="@+id/tvPonenteLugarHora"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Pérez, Lunes 11:00 – Auditorio A"
            android:textColor="@color/md_theme_onSecondaryContainer" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
